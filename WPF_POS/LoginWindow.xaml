<Window x:Class="WPF_POS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_POS"
        mc:Ignorable="d"
        Title="Logowanie" Height="300" Width="300" FontSize="14" Background="Purple">
    <Border Background="Black" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Logowanie" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Nazwa użytkownika" Foreground="White" FontSize="12"></Label>
            <TextBox Name="textBoxUsername" Background="#585656" Foreground="White"></TextBox>
            <Label Content="Hasło" Foreground="White" FontSize="12"></Label>
            <PasswordBox Name="textBoxPassword" Background="#585656" Foreground="White"></PasswordBox>
            <Button Name="Submit" Content="Zatwierdź" Background="#585656"  Foreground="White" Margin="60 10" Click="Submit_Click"></Button>
        </StackPanel>
    </Border>
</Window>
